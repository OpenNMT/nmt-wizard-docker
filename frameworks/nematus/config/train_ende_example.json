{
    "source": "en",
    "target": "de",
    "tokenization": {
        "mode": "aggressive",
        "joiner_annotate": true
    },
    "options": {
        "theano": {
            "mode": "FAST_RUN",
            "floatX": "float32",
            "device": "cpu",
            "optimizer": "fast_compile",
            "default": ""
        },
        "train": {
            "saveFreq": 10597,
            "dim_word": 512,
            "dim": 512,
            "n_words_src": 50002,
            "n_words": 50002,
            "use_dropout": "true",
            "dropout_hidden": 0.3,
            "layer_normalisation": "true",
            "encoder": "lstm",
            "enc_depth": 2,
            "decoder": "lstm_cond",
            "decoder_deep": "lstm",
            "dec_depth": 2,
            "maxlen": 50,
            "batch_size": 64,
            "maxibatch_size": 64,
            "objective": "CE",
            "valid_batch_size": 64,
            "src_vocab": "${CORPUS_DIR}/vocab/en-vocab.txt",
            "tgt_vocab": "${CORPUS_DIR}/vocab/de-vocab.txt"
        },
        "trans": {
        }
    }
}
